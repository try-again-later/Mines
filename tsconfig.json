{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",

        "strict": true,
        "noUncheckedIndexedAccess": true,

        "moduleResolution": "bundler",
        "module": "esnext",
        "noEmit": true,
        "isolatedModules": true,

        "lib": ["ES2022", "DOM", "DOM.Iterable"]
    },
    "include": ["src"]
}
